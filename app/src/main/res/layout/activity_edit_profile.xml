<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#f8f9fa"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEditProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#324355"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:id="@+id/profileEditCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:clipToPadding="false"
            android:clipToOutline="true"
            android:backgroundTint="@android:color/white"
            android:backgroundTintMode="src_in"
            android:shape="rectangle">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_person_placeholder"
                android:scaleType="centerCrop"
                android:background="#fde0e9"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Profile Picture"
                android:cropToPadding="true"
                android:shape="oval" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="#324355"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background_soft"
                android:hint="Enter name"
                android:textColor="#324355"
                android:textColorHint="#8a9bab"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvDobLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:textColor="#324355"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etDob"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background_soft"
                android:hint="DD MMM YYYY"
                android:textColor="#324355"
                android:textColorHint="#8a9bab"
                android:paddingHorizontal="16dp"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="#324355"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background_soft"
                android:hint="Enter phone number"
                android:textColor="#324355"
                android:textColorHint="#8a9bab"
                android:paddingHorizontal="16dp"
                android:inputType="phone"
                android:layout_marginBottom="16dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#324355"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/input_background_soft"
                android:hint="Enter address"
                android:textColor="#324355"
                android:textColorHint="#8a9bab"
                android:gravity="top"
                android:padding="16dp"
                android:layout_marginBottom="24dp" />


            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Save Changes"
                android:textColor="#324355"
                android:background="#c9e7ff"
                android:layout_marginBottom="12dp"
                android:stateListAnimator="@null"
                android:letterSpacing="0.02" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cancel"
                android:textColor="#324355"
                android:background="#fde0e9"
                android:stateListAnimator="@null"
                android:letterSpacing="0.02" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
