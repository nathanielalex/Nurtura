<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="32dp"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/txt_appname"
        style="@style/Widget.Nurtura.TextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="NURTURA"
        android:textColor="@color/accent_primary" />

    <TextView
        android:id="@+id/txt_greetings"
        style="@style/Widget.Nurtura.TextView.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Welcome, Mom!" />

    <EditText
        android:id="@+id/etName"
        style="@style/Widget.Nurtura.EditText"
        android:layout_marginTop="40dp"
        android:autofillHints="name"
        android:hint="Full Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etEmail"
        style="@style/Widget.Nurtura.EditText"
        android:layout_marginTop="16dp"
        android:autofillHints="emailAddress"
        android:hint="Email Address"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etPassword"
        style="@style/Widget.Nurtura.EditText"
        android:layout_marginTop="16dp"
        android:autofillHints="password"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etVerifyPassword"
        style="@style/Widget.Nurtura.EditText"
        android:layout_marginTop="16dp"
        android:autofillHints="password"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etPhoneNumber"
        style="@style/Widget.Nurtura.EditText"
        android:layout_marginTop="16dp"
        android:autofillHints="phoneNumber"
        android:hint="Phone Number"
        android:inputType="phone" />

    <Button
        android:id="@+id/btnRegister"
        style="@style/Widget.Nurtura.Button.Primary"
        android:layout_marginTop="32dp"
        android:text="Create Account Securely" />

    <TextView
        android:id="@+id/tvLogin"
        style="@style/Widget.Nurtura.TextView.Link"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:text="Already have an account? Login Now" />

</LinearLayout>
