<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/layoutReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtMessageReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_received_bubble"
            android:padding="12dp"
            android:text="Hello!"
            android:textColor="#324355"
            android:maxWidth="260dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtTimeReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:textColor="#888888" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:gravity="end"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtMessageSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_sent_bubble"
            android:padding="12dp"
            android:text="Hi there!"
            android:textColor="#FFFFFF"
            android:maxWidth="260dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtTimeSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:textColor="#888888" />

    </LinearLayout>
</LinearLayout>