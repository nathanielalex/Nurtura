<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Nurtura.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.Nurtura.Button.Primary" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="backgroundTint">@color/accent_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.Nurtura.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/accent_primary</item>
        <item name="strokeColor">@color/accent_primary</item>
        <item name="iconTint">@color/accent_primary</item>
        <item name="iconPadding">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.Nurtura.TextView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textColor">@color/accent_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Nurtura.TextView.Subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Nurtura.TextView.Link" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Nurtura.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_color_selector</item>
        <item name="android:background">@color/surface</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Widget.Nurtura.Avatar" parent="android:Widget">
        <item name="android:background">@color/stroke</item>
    </style>

    <style name="ShapeAppearance.BottomRoundedImage"
        parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
    </style>
</resources>
